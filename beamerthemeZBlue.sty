\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth,dp=75ex]{headline}
    \begin{columns}[T]
 %     \begin{column}{.02\paperwidth}
   %   \end{column}
     % \begin{column}{.07\paperwidth}
   %   \end{column}
   	\begin{column}{.17\paperwidth}
	\end{column}
      \begin{column}{0.66\paperwidth}
        \vskip20ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\TitleFont \inserttitle}\\[4ex]}
        \usebeamercolor{author in headline}{\color{fg}\Huge{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\Huge{\insertinstitute}\\[1ex]}
        \vskip2ex
      \end{column}
      \begin{column}{.17\paperwidth}
        \centering
        \vskip10ex
        \hspace*{-1.5in}
        \includegraphics[height=0.05\paperwidth]{figures/bccancer-logo}
        \vspace{1pt}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

